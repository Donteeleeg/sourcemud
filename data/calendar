# Define holidays
holiday {
  name = "Winter Solstice"
  # Every 21st of December
  month = "December"
  day = 21
}
holiday {
  name = "Turur Frer"
  # Every other year, second Tuesday of March
  years = 2
  month = "March"
  weekday = "Tuesday"
  wdindex = 2
}
holiday {
  name = "10th Day of 4th Year"
  # 10th day of every month, every 4 years
  years = 4
  day = 10
}
