blueprint.npc {
  blueprint.id = "base_undead"

  blueprint.equip = "claws"
  
  blueprint.stat = [ "Strength", 10 ]
  blueprint.stat = [ "Agility", 20 ]
  blueprint.stat = [ "Fortitude", 10 ]
  blueprint.stat = [ "Intellect", 0 ]
  blueprint.stat = [ "Spirit", 10 ]
