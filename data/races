# Human race
races.race {
  race.name = "human"

  # basics
  race.adj = "human"
  race.body = "humanoid"

  # description
  race.about = "Humans are perhaps the most versatile of the races.  Looked down upon by the other races for their ambition, humans often are capable of reaching achievements far quicker than the other races."

  race.desc = "{$self.D} is a {$self.build} {$self.male} of {$self.height} stature, with {$self.skin_color} skin, {$self.eye_color} eyes, and {! $self.hair_style}, {$self.hair_color} hair."

  # eye colors
  race.eye_color = "brown"
  race.eye_color = "blue"
  race.eye_color = "green"
  race.eye_color = "grey"
  race.eye_color = "black"

  # hair colors
  race.hair_color = "brown"
  race.hair_color = "grey"
  race.hair_color = "white"
  race.hair_color = "black"
  race.hair_color = "blonde"
  race.hair_color = "red"

  # skin colors
  race.skin_color = "fair"
  race.skin_color = "pale"
  race.skin_color = "dark"
  race.skin_color = "tan"

  # hair styles
  #race.trait = [ "hair style", "short" ]
  #race.trait = [ "hair style", "long" ]
  #race.trait = [ "hair style", "flowing" ]
  #race.trait = [ "hair style", "bun" ]
  #race.trait = [ "hair style", "curly" ]
  #race.trait = [ "hair style", "ponytail" ]
  #race.trait = [ "hair style", "spiked" ]
  #race.trait = [ "hair style", "shaved" ]

  # body builds
  #race.trait = [ "build", "average" ]
  #race.trait = [ "build", "broad" ]
  #race.trait = [ "build", "fat" ]
  #race.trait = [ "build", "large" ]
  #race.trait = [ "build", "lean" ]
  #race.trait = [ "build", "hunched" ]
  #race.trait = [ "build", "slim" ]
  #race.trait = [ "build", "stocky" ]

  # age
  race.min_age = 18
  race.max_age = 25
  race.lifespan = 90
}

# Elven race
races.race {
  race.name = "elf"

  # basics
  race.adj = "elven"
  race.body = "humanoid"

  # description
  race.about = "Elves are tall, graceful people.  Usually living in the forest, the elven people have an affinity for nature, and abhor the destruction wrought to the lands by humans.  Elves live exceptionally long lives."

  race.desc = "{$self.D} stands {$self.height} tall, with an air of graceful nobility.  {! $self.hair_style}, {$self.hair_color} hair frames {$self.his} angular facial features.  {$self.His} {$self.eye_color} eyes stand starkly apart from the {$self.skin_color} skin of {$self.his} {! $self.build} frame."

  # mods
  race.stat_bonus = [ "strength", -5 ]
  race.stat_bonus = [ "fortitude", -10 ]
  race.stat_bonus = [ "spirit", 5 ]
  race.stat_bonus = [ "agility", 10 ]

  # age and lifespan
  race.min_age = 50
  race.max_age = 400
  race.lifespan = 2000

  # eye colors
  race.eye_color = "brown"
  race.eye_color = "blue"
  race.eye_color = "green"
  race.eye_color = "black"

  # hair colors
  race.hair_color = "brown"
  race.hair_color = "silver"
  race.hair_color = "white"
  race.hair_color = "black"
  race.hair_color = "blonde"
  race.hair_color = "green"
  race.hair_color = "blue"
  race.hair_color = "red"

  # skin colors
  race.skin_color = "fair"
  race.skin_color = "tan"

  # hair styles
  #race.trait = [ "hair style", "short" ]
  #race.trait = [ "hair style", "long" ]
  #race.trait = [ "hair style", "flowing" ]
  #race.trait = [ "hair style", "bun" ]
  #race.trait = [ "hair style", "curly" ]
  #race.trait = [ "hair style", "ponytail" ]
  #race.trait = [ "hair style", "spiked" ]
  #race.trait = [ "hair style", "shaved" ]

  # body builds
  #race.trait = [ "build", "average" ]
  #race.trait = [ "build", "lean" ]
  #race.trait = [ "build", "hunched" ]
  #race.trait = [ "build", "slim" ]

  # heights
  race.male_height = 74
  race.female_height = 72
}

# Dwarvish race
races.race {
  race.name = "dwarf"

  # basics
  race.adj = "dwarven"
  race.body = "humanoid"

  race.about = "Tough as stone, and not much better looking, dwarves are a race of beings who live in the earth itself.  Their craftsmanship, in both metal and stone, is reknown by all.  Despite their shorter heights, a dwarf is often far stronger than the other races; they are also excellent warriors."

  race.desc = "{$self.D} is {$self.height} tall and {! $self.build} with a long {! $self.hair_color} beard.  {$self.His} {$self.eye_color} eyes look almost like gems set in the {$self.skin_color} rocky skin of {$self.his} face, topped with {! $self.hair_style} hair."

  # mods
  race.stat_bonus = [ "strength", 5 ]
  race.stat_bonus = [ "fortitude", 10 ]
  race.stat_bonus = [ "spirit", -15 ]

  # age and lifespan
  race.min_age = 30
  race.max_age = 100
  race.lifespan = 400

  # eye colors
  race.eye_color = "brown"
  race.eye_color = "black"
  race.eye_color = "red"

  # hair colors
  race.hair_color = "brown"
  race.hair_color = "white"
  race.hair_color = "black"
  race.hair_color = "blonde"
  race.hair_color = "red"

  # skin colors
  race.skin_color = "tan"
  race.skin_color = "reddish"
  race.skin_color = "dark"
  race.skin_color = "granite"

  # heights
  race.male_height = 55
  race.female_height = 53
}

