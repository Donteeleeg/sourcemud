state {
  id = clear
  desc = "The sky is perfectly clear."
  change {
    target = rain
    chance = 10
    text = "Rain begins to fall."
  }
}
state {
  id = rain
  desc = "Rain is pouring steadily."
  change {
    target = clear
    chance = 20
    text = "The rain ceases."
  }
}

