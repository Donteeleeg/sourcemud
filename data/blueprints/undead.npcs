}

# --- ANIMALS ---
blueprint.npc {
  blueprint.id = "rabbit_skeleton"
  blueprint.parent = "base_undead"
  blueprint.name = "a rabbit skeleton"
  blueprint.desc = "Bits of fur and sinew hang off the tiny bones of {$self.D}."
}
blueprint.npc {
  blueprint.id = "fox_skeleton"
  blueprint.parent = "base_undead"
  blueprint.name = "a fox skeleton"
  blueprint.desc = "{$self.D} shambles around with none of the grace of a living fox."
}
blueprint.npc {
  blueprint.id = "wolf_skeleton"
  blueprint.parent = "base_undead"
  blueprint.name = "a wolf skeleton"
  blueprint.desc = "The eyes of {$self.d} glow a malevolent red."
}
blueprint.npc {
  blueprint.id = "skeleton"
  blueprint.parent = "base_undead"
  blueprint.name = "a skeleton"
  blueprint.desc = "Bleached bones and glowing red eyes shamble around seeking for the living."
}
