				th \{
					text-align: left;
					vertical-top: top;
					background: #666;
					font-weight: bold;
					color: #fff;
					padding: 2px;
				}
				td.options \{
					text-align: right;
				}
				a \{
					color: #00C;
				}
				#title \{
					background: #eee;
					text-align: center;
